<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#504850"
    tools:context=".FirstFragment">

    <EditText
        android:id="@+id/textStatus"
        android:layout_width="405dp"
        android:layout_height="322dp"
        android:layout_marginTop="404dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="14dp"
        android:layout_height="22dp"
        android:layout_marginHorizontal="330dp"
        android:layout_marginVertical="73dp"
        android:layout_marginStart="329dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="337dp"
        android:layout_height="407dp"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:src="@mipmap/bg_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/bg_background"
        tools:src="@mipmap/bg_background"
        tools:srcCompat="@mipmap/bg_background" />



</androidx.constraintlayout.widget.ConstraintLayout>